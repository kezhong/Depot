<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("logo.png")%>
    <%= @page_title || "Pragmatic Bookshelf"%>
  </div>
  <div id="columns">
    <div id="side">
      <%=link_to 'Home', :store%><br/>
      <%=link_to 'Books', :books%><br/>
      <%=link_to 'Music', :music%><br/>
      <%=link_to 'Movies', :movies%>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
